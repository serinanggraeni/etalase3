generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Product {
  id        Int      @id @default(autoincrement())
  name      String
  whatsapp  String?
  tiktok    String?
  shopee    String?
  category  String
  price     Float
  image     String[]
  description String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Testimoni {
  id        Int      @id @default(autoincrement())
  name      String
  message   String
  rating    Int
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Config {
  id              Int      @id @default(autoincrement())
  tiktokUrl       String?  
  shopeeUrl       String?
  whatsappNumber  String?
  whatsappMessage String?
  primaryColor    String?   @default("#3b82f6")
  updatedAt       DateTime  @updatedAt
}